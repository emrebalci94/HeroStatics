@model NavbarViewModel //_ViewImports geliyo

<div class="navbar-nav">
    @foreach (var item in Model.Categories)
    {
 
        if (item.Id == Model.CurrentCategory)
        {
            
            <a class="nav-item nav-link active" asp-controller="Home" asp-action="Category" asp-route-categoryId="@item.Id"> @item.Name</a>
        }
        else
        {
            <a class="nav-item nav-link" asp-controller="Home" asp-action="Category" asp-route-categoryId="@item.Id"> @item.Name</a>
        }
    }

</div>