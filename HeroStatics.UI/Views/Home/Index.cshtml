        @foreach (var item in Model)
        {
            <div class="col-md-2">
                <div class="card mb-2">
                    <img class=" img-thumbnail rounded-circle" src="@item.PictureUrl" alt="@item.Name">
                    <div class="card-body">
                        <h6 class="card-title">@item.Name ( @(item.Category.Name) ) </h6>
                        <p class="card-text">
                            Power:
                        </p>
                        <div class="progress">
                            <div class="progress-bar bg-danger" role="progressbar" style="width: @(item.Power)%;" aria-valuenow="@(item.Power)" aria-valuemin="0" aria-valuemax="100">@(item.Power)%</div>
                        </div>
                        <p class="card-text">
