@model List<HeroStatics.Entity.Concrete.Hero>
@{
    ViewData["Title"] = "Index";
}

<h2>Hero Denemeler</h2>
@if (TempData["mesaj"] != null)
{

    <div class="alert alert-info" role="alert">
        @TempData["mesaj"]
    </div>
}



<div class="col-md-12">
    <a asp-controller="Home" asp-action="Index" class="badge badge-info">Link Deneme</a>
    <a asp-controller="Home" asp-action="YeniHero" class="badge badge-primary"><i class="fa fa-plus-circle"></i> Random Hero Ekle </a>
    <a asp-controller="Home" asp-action="DeleteHero" class="badge badge-success"><i class="fa fa-edit"></i> Random Hero Düzenle</a>

    <a asp-controller="Home" asp-action="DeleteHero" class="badge badge-warning"><i class="fa fa-remove"></i> Random Hero Sil</a>
    @await Component.InvokeAsync("NewHeroWithModal")
</div>
